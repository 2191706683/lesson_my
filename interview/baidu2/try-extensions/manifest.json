{
    "manifest_version": 2,
    "name": "ScreenShot",
    "version": "1.0",
    "description": "Easy and intuitive webpage",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "browser_action": {
        "default_icon": "icon-48.png",
        "default_title": "Capture screenshot"
    },
    "permissions": ["activeTab", "storage"],
    "background": {
        "script": ["background.js"]
    }
}