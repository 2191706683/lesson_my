<%- include('header', {type: 'create' })%>
    <div class="container">
        <form style="width:100%" method="post" class="form create">
            <div>
                <label>标题</label>
                <input type="text" placeholder="请输入标题" name="title">
            </div>
            <div>
                <label>内容：</label>
                <textarea placeholder="请输入内容" name="content" cols="42" rows="10"></textarea>
            </div>
            <div class="submit">发表</div>
        </form>
    </div>
    <script>
        $('.submit').click(function () {
            if ($('input[name=title]').val().trim() === '') {
                alert('请输入标题')
            } else if ($('textarea').val().trim() === '') {
                alert('请输入内容')
            } else {
                $.ajax({
                    url: '/create',
                    data: $('.form').serialize(),
                    type: "POST",
                    cache: false,
                    dataType: 'json',
                    success: function (msg) {
                        if (msg.code === 200) {
                            alert('发表成功')
                            setTimeout(function () {
                                location.href = "/posts"
                            }, 1000)
                        } else {
                            alert('发表失败')
                        }
                    }
                })
            }
        })
    </script>
    <%- include('footer')%>